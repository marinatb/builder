FROM ubuntu:15.10
RUN apt-get update && apt-get install -y \
  vim-nox \
  tmux \
  clang \
  lldb \
  libc++-dev \
  libc++abi-dev \
  cmake \
  ninja-build \
  ssh \
  rsync \
  git \
  curl \
  libssl-dev \
  uuid-dev \
  gperf \
  subversion \
  libbz2-dev \
  sudo

RUN mkdir /build

RUN cd /tmp && \
  git clone https://github.com/rcgoodfellow/proxygen && \
  cd proxygen/proxygen && \
  ./deps.sh -j `nproc` && \
  ./reinstall.sh
  

ENTRYPOINT ["ninja"]
